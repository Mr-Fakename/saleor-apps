# Generic environment file for testing Saleor apps
# Copy this file to .env.{app-name} for app-specific configuration

# App Runtime Configuration
APP_NAME=stripe
NODE_ENV=production
PORT=3000

# Saleor Configuration
SALEOR_API_URL=http://localhost:8000/graphql/
SALEOR_APP_TOKEN=your-app-token-here
SALEOR_WEBHOOK_SECRET=your-webhook-secret-here
NEXT_PUBLIC_SALEOR_API_URL=http://localhost:8000/graphql/

# Database Configuration (DynamoDB Local for testing)
AWS_ACCESS_KEY_ID=dummy
AWS_SECRET_ACCESS_KEY=dummy
AWS_REGION=us-east-1
AWS_ENDPOINT_URL=http://dynamodb-local:8000
DYNAMODB_MAIN_TABLE_NAME=saleor-apps-config

# App Security
SECRET_KEY=your-secret-key-here
APP_LOG_LEVEL=info

# Common App-Specific Variables (customize per app)
# For Stripe:
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_PUBLISHABLE_KEY=pk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_...

# For CMS:
# CMS_PROVIDER=contentful
# CONTENTFUL_SPACE_ID=your-space-id
# CONTENTFUL_ACCESS_TOKEN=your-token

# For Klaviyo:
# KLAVIYO_API_KEY=your-api-key

# For Search:
# ALGOLIA_APPLICATION_ID=your-app-id
# ALGOLIA_ADMIN_API_KEY=your-admin-key
# ALGOLIA_SEARCH_API_KEY=your-search-key

# For SMTP:
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=user@example.com
# SMTP_PASSWORD=your-password